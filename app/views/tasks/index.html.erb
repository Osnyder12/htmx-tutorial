<div class="w-full">
  <% if notice.present? %>
    <p class="inline-block px-3 py-2 mb-5 font-medium text-green-500 rounded-lg bg-green-50" id="notice"><%= notice %></p>
  <% end %>

  <div class="flex items-center justify-between">
    <h1 class="text-4xl font-bold">Tasks</h1>
    <button type="button"
            class="block px-5 py-3 font-medium text-white bg-blue-600 rounded-lg"
            hx-get="/tasks/new"
            hx-target="#new-task">New Task
    </button>
  </div>

  <div id="tasks" class="min-w-full">
    <%= render @tasks %>
  </div>

  <div id="new-task"></div>
</div>
